import React from 'react';
import PropTypes from 'prop-types';

const CourseSchedule = ({ schedule }) => {
  // Null check already handled in parent, but this ensures the component doesn't break.
  if (!schedule) return null;

  // Check if days array or other fields are empty
  const { days, time, youtubeLink } = schedule;
  if (!days.length || !time || !youtubeLink) {
    return <div>Schedule information is incomplete.</div>;
  }

  return (
    <div className="course-schedule">
      <h3>Live Session Schedule</h3>
      <p><strong>Days:</strong> {days.join(', ')}</p>
      <p><strong>Time:</strong> {time}</p>
      <p>
        <strong>Live Session Link:</strong>
        <a href={youtubeLink} target="_blank" rel="noopener noreferrer">
          Join Now
        </a>
      </p>
    </div>
  );
};

CourseSchedule.propTypes = {
  schedule: PropTypes.shape({
    days: PropTypes.arrayOf(PropTypes.string).isRequired,
    time: PropTypes.string.isRequired,
    youtubeLink: PropTypes.string.isRequired,
  }).isRequired,
};

export default CourseSchedule;
